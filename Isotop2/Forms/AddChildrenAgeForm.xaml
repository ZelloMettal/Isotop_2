<Window x:Class="Isotop2.Forms.AddChildrenAgeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isotop2.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавление" Height="130" Width="300"
        Icon="/Resources/add.jpg"
        KeyDown="Enter_KeyDown">
    <Grid>
        <Label Name="label_Age" Content="Возраст" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="label_Coefficent" Content="Коэффицент" Margin="155,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_Age" Width="130" Margin="10,30,10,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_Coefficent" PreviewTextInput="NumberWithDotValidationTextBox" Width="130" Margin="10,30,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name="button_OK" Content="Добавить" Click="button_OK_Click" Width="60" Margin="0,0,80,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Name="button_Cancel" Content="Отмена" Click="button_Cancel_Click" Width="60" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
