<Window x:Class="Isotop2.Forms.RIForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isotop2.Forms"
        mc:Ignorable="d"
        Name="RIFormName"
        Title="РИ" Height="450" Width="800"
        Icon="/Resources/radiation .jpg"
        Loaded="RIForm_Load">
    <Grid>
        <Button Name="button_Search" Click="button_Search_Click" Width="30" Height="30" Background="White" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Source="/Resources/find.jpg"/>
        </Button>
        <Button Name="button_DropSearch" Click="button_DropSearch_Click" Width="30" Height="30" Background="White" Margin="50,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Source="/Resources/drop_find.jpg"/>
        </Button>
        <Button Name="button_Add" Click="button_Add_Click" Content="Добавить" Width="60" Margin="0,20,150,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name="button_Edit" Click="button_Edit_Click" Content="Изменить" Width="60" Margin="0,20,80,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name="button_Delete" Click="button_Delete_Click" Content="Удалить" Width="60" Margin="0,20,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <DataGrid Name="dataGrid_RIList" SelectedCellsChanged="dataGrid_RIList_CellClick" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" Margin="10,45,10,10"/>
        <Button Name="button_ExportToExcel" Click="button_ExportToExcel_Click" Width="30" Height="30" Background="White" Margin="90,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Source="/Resources/excel.jpg"/>
        </Button>
    </Grid>
</Window>
