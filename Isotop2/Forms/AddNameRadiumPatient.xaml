<Window x:Class="Isotop2.Forms.AddNameRadiumPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isotop2.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавить пациента" Height="120" Width="300" 
        Icon="/Resources/add.jpg"
        KeyDown="Enter_KeyDown">
    <Grid>
        <Label Name="label_PatientName" Content="Имя пациента" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_PatientName" Margin="10,25,10,0" VerticalAlignment="Top"/>
        <Button Name="button_OK" Content="Добавить" Click="button_OK_Click" Margin="10,50,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button Name="button_Cancel" Content="Отмена" Click="button_Cancel_Click" Margin="230,50,10,10" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
