<Window x:Class="Isotop2.Forms.AuthorizationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isotop2.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Авторизация" Height="170" Width="270"
        Icon="/Resources/radiation .jpg"
        KeyDown="Enter_KeyDown">
    <Grid>
        <Label Name="label_UserName" Content="Имя пользователя" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_UserName" TabIndex="0" Margin="10,30,10,0" VerticalAlignment="Top"/>
        <Label Name="label_Password" Content="Пароль" Margin="5,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_UserPassword" Visibility="Hidden" Margin="10,75,10,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passwordBox_UserPassword" TabIndex="1" Margin="10,75,10,0" VerticalAlignment="Top"/>
        <CheckBox Name="checkBox_ShowPassword" Content="Показать пароль" Checked="checkBox_ShowPassword_Checked" Unchecked="checkBox_ShowPassword_Uncheked" Margin="0,55,10,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Button Name="button_OK" TabIndex="2" Click="button_OK_Click" Content="Войти" Width="50" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button Name="button_Cancel" Content="Отмена" Click="button_Cancel_Click" Width="50" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
