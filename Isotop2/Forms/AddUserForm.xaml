<Window x:Class="Isotop2.Forms.AddUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isotop2.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавоение" Height="230" Width="260"
        Icon="/Resources/add.jpg"
        KeyDown="Enter_KeyDown">
    <Grid>
        <Label Name="label_UserName" Content="Имя пользователя" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_UserName" TabIndex="0" Margin="10,30,10,0" VerticalAlignment="Top"/>
        <Label Name="label_Password" Content="Пароль" Margin="5,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_Password" Visibility="Hidden" TabIndex="1" Margin="10,75,10,10" VerticalAlignment="Top"/>
        <PasswordBox Name="passworBox_Password" TabIndex="1" Margin="10,75,10,0" VerticalAlignment="Top"/>
        <CheckBox Name="checkBox_ShowPassword" Content="Показать пароль" Checked="checkBox_ShowPassword_Checked" Unchecked="checkBox_ShowPassword_Unchecked" IsThreeState="False" Margin="0,55,10,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Label Name="label_ConfirmPassword" Content="Подтверждение пароля" Margin="5,90,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_ConfirmPassword" TabIndex="3" Visibility="Hidden" Margin="10,115,10,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passworBox_ConfirmPassword" TabIndex="2" Margin="10,115,10,0" VerticalAlignment="Top"/>
        <CheckBox Name="checkBox_Administrator" Content="Администартор" IsThreeState="False" TabIndex="3" Margin="10,140,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="button_OK" Content="Добавить" Click="button_OK_Click" Width="60" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button Name="button_Cancel" Content="Отмена" Click="button_Cancel_Click" Width="60" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
