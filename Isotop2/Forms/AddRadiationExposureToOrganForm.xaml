<Window x:Class="Isotop2.Forms.AddRadiationExposureToOrganForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isotop2.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавление" Height="130" Width="440" 
        Icon="/Resources/add.jpg"
        Loaded="EditRadiationExposureToOrganForm_Load"
        KeyDown="Enter_KeyDown">
    <Grid>
        <Label Name="label_Marker" Content="Маркер" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="label_Organ" Content="Орган" Margin="145,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="label_Coefficient" Content="Коэффицент" Margin="285,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="comboBox_Marker" Width="120" Margin="10,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="comboBox_Organ" Width="120" Margin="150,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="textBox_Coefficient"  Width="130" PreviewTextInput="NumberValidationTextBox" Margin="0,32,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name="button_OK" Content="Добавить" Click="button_OK_Click" Width="60" Margin="0,65,80,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name="button_Cancel" Content="Отмена" Click="button_Cancel_Click" Width="60" Margin="0,65,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
